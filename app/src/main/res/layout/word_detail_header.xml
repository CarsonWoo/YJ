<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/basic_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旅行"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorTextWord"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="travel"
        android:textColor="@color/colorTextWord"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/basic_trans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/soundmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/ trea:val /"
        android:textSize="14sp"
        android:textColor="@color/colorTextHint"
        app:layout_constraintTop_toBottomOf="@id/word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/play_sound"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_sound_fill_main_min"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/soundmark"
        app:layout_constraintTop_toTopOf="@id/soundmark"
        />

</android.support.constraint.ConstraintLayout>