<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.carson.yjenglish.msg.MsgFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/colorTextWord"
            android:textAlignment="center"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/tab_item_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:textAlignment="center"
            >
            <ImageView
                android:id="@+id/tab_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_msg_comment"/>
            <TextView
                android:id="@+id/tab_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:text="我的评论"
                android:textColor="@color/colorTextHint"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_item_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:textAlignment="center"
            >
            <ImageView
                android:id="@+id/tab_like_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_msg_like"/>
            <TextView
                android:id="@+id/tab_like_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:text="收到的赞"
                android:textColor="@color/colorTextHint"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tab_item_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:textAlignment="center"
            >
            <ImageView
                android:id="@+id/tab_notice_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_msg_notice"/>
            <TextView
                android:id="@+id/tab_notice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:text="系统通知"
                android:textColor="@color/colorTextHint"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/msg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="105dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        />

</android.support.constraint.ConstraintLayout>
