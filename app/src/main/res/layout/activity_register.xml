<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fffe"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.example.carson.yjenglish.register.view.RegisterActivity">


    <ImageView
        android:id="@+id/tv2"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@mipmap/start_text"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_edit"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:paddingBottom="40dp"
        android:background="@drawable/baseline_edit_gray"
        android:layout_marginTop="100dp"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_phone"
        android:hint="@string/edit_phone"
        android:maxLength="16"
        android:inputType="phone"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <TextView
        android:id="@+id/register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/register2login"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="@id/btn_confirm"
        app:layout_constraintTop_toBottomOf="@id/btn_confirm" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/solid_half_circle_btn_main"
        android:text="@string/confirm"
        android:textColor="#beffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_phone" />

    <ImageButton
        android:id="@+id/btn_qq"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/ic_qq"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/register_back"
        app:layout_constraintEnd_toStartOf="@id/register_back"
        />

    <ImageButton
        android:id="@+id/btn_wechat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/ic_wechat"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/register_back"
        app:layout_constraintEnd_toStartOf="@id/btn_qq"
        />


</android.support.constraint.ConstraintLayout>
