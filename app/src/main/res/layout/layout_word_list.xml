<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextWord"
        android:textSize="22sp"
        android:text="travel"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_trans"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="n. 旅行；进行"
        android:singleLine="true"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_word"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_meaning"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:text="@string/show_meaning"
        android:textColor="@color/colorTextHint"
        android:background="@drawable/solid_round_rect_btn_gray"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_pass"
        />

    <Button
        android:id="@+id/btn_pass"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:textAllCaps="false"
        android:text="@string/pass"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="15dp"
        android:background="@drawable/solid_round_rect_btn_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>