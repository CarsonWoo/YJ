<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yjenglish.music.view.MusicActivity">

    <ImageSwitcher
        android:id="@+id/bg_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#62393939"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        />

    <TextSwitcher
        android:id="@+id/music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_music_cd_bg"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/music_control"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_music_control"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="65dp"
        android:layout_gravity="end"
        android:rotation="-25"
        android:transformPivotX="10dp"
        android:transformPivotY="20dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_photo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@color/colorAccent"
        android:layout_marginTop="130dp"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorTextHint"
        android:layout_gravity="center_horizontal"/>

    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        app:lrcTextSize="13sp"
        app:lrcCurrentTextColor="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/like"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/ic_like_white_stroke"
        android:layout_marginBottom="135dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="bottom"
        />

    <ImageView
        android:id="@+id/download"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_download_white"
        android:layout_marginBottom="135dp"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_horizontal|bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_horizontal|bottom"
        />

    <Switch
        android:id="@+id/speed_control"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="134dp"
        android:layout_marginEnd="20dp"
        android:text="慢速"
        android:track="@drawable/switch_track"
        android:thumb="@drawable/switch_thumb"
        android:switchPadding="8dp"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom|end"
        />

    <TextView
        android:id="@+id/progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:text="00:28"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_gravity="bottom"
        />

    <SeekBar
        android:id="@+id/music_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:thumb="@drawable/ic_seek_bar_thumb_min"
        android:progressDrawable="@drawable/bg_seek_bar_main_min"
        android:layout_marginBottom="105dp"
        android:progress="20"
        android:layout_gravity="bottom|center_horizontal"
        android:splitTrack="false"
        android:mirrorForRtl="true"
        />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:text="01:58"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="10dp"
        android:layout_gravity="bottom|end"
        />

    <ImageView
        android:id="@+id/music_play_mode"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_music_play_single"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="bottom"
        />

    <ImageView
        android:id="@+id/music_play_list"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_music_play_list"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="bottom|end"
        />

    <ImageView
        android:id="@+id/music_play_former"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_music_play_former"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="42dp"
        android:layout_gravity="bottom|center_horizontal"
        />

    <ImageView
        android:id="@+id/music_play_latter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_music_play_latter"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="42dp"
        android:layout_gravity="center_horizontal|bottom"
        />

    <ImageView
        android:id="@+id/music_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_music_play_large"
        android:layout_marginBottom="28dp"
        android:layout_gravity="bottom|center_horizontal"
        />

</FrameLayout>
