<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="340dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        >

        <TextView
            android:id="@+id/field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语境句子"
            android:textSize="15sp"
            android:textColor="@color/colorTextWord"
            android:layout_gravity="start"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_arrow_down_fill_main"
            />

        <EditText
            android:id="@+id/edit_report"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/shape_rect_gray"
            android:hint="请输入修改内容"
            android:textSize="12sp"
            android:gravity="start"
            android:padding="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/solid_half_circle_btn_main"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/delete_dialog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_delete_gray"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>