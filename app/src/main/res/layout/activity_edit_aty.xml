<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.example.carson.yjenglish.home.view.word.EditAty">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单词笔记"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/colorTextWord"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back"
        />
    
    <TextView
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorTextWord"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        />

    <TextView
        android:id="@+id/soundmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:background="@android:color/white"
        android:paddingStart="13dp"
        android:paddingTop="1dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/word"/>

    <TextView
        android:id="@+id/word_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="0/800"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:textColor="@color/colorTextHint"
        android:paddingEnd="10dp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/soundmark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_edit"
        android:text="笔记"
        android:textColor="@color/colorTextWord"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/soundmark"
        app:layout_constraintStart_toStartOf="@id/back"/>

    <EditText
        android:id="@+id/edit_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="140dp"
        android:hint="请输入该单词的笔记"
        android:maxLength="800"
        android:textSize="12sp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/word_count"
        />

</android.support.constraint.ConstraintLayout>
