<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.carson.yjenglish.customviews.RoundRectImageView
        android:id="@+id/bg_welfare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/colorAccent"
        app:radius="20"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:minHeight="120dp">

        <TextView
            android:id="@+id/welfare_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="周一单词PK活动"
            android:textStyle="bold"
            android:layout_marginStart="140dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/welfare_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:text="为小主奉上大礼"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/welfare_title"
            app:layout_constraintTop_toBottomOf="@id/welfare_title"
            />

        <TextView
            android:id="@+id/welfare_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_btn_gray"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:text="为小主奉上大礼"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintTop_toBottomOf="@id/welfare_slogan"
            app:layout_constraintStart_toStartOf="@id/welfare_slogan"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>