<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fbfb"
    tools:context="com.example.carson.yjenglish.zone.view.download.MyDownloadAty">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc"
        android:text="我下载的"
        android:textColor="@color/colorTextWord"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingTop="34dp"
        android:paddingBottom="9.5dp"
        />
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginTop="34dp"
        android:layout_marginStart="8.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/offline_words"
        android:layout_width="match_parent"
        android:layout_height="62.5dp"
        android:background="@android:color/white"
        android:text="6"
        android:textColor="@color/colorTextHint"
        android:textSize="15sp"
        android:gravity="end|center_vertical"
        android:textAlignment="viewEnd"
        android:paddingEnd="33.5dp"
        android:paddingStart="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_music_word"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/offline_words"
        app:layout_constraintBottom_toBottomOf="@id/offline_words"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离线单词包"
        android:textColor="@color/colorTextWord"
        android:textSize="15sp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/offline_words"
        app:layout_constraintBottom_toBottomOf="@id/offline_words"
        />

    <TextView
        android:id="@+id/offline_music"
        android:layout_width="match_parent"
        android:layout_height="62.5dp"
        android:background="@android:color/white"
        android:text="6"
        android:textColor="@color/colorTextHint"
        android:textSize="15sp"
        android:gravity="end|center_vertical"
        android:textAlignment="viewEnd"
        android:paddingEnd="33.5dp"
        android:paddingStart="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/offline_words"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_music_word"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/offline_music"
        app:layout_constraintBottom_toBottomOf="@id/offline_music"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离线随身听"
        android:textColor="@color/colorTextWord"
        android:textSize="15sp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/offline_music"
        app:layout_constraintBottom_toBottomOf="@id/offline_music"
        />


</android.support.constraint.ConstraintLayout>
