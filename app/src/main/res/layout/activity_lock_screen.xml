<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32c3c3c3"
    tools:context="com.example.carson.yjenglish.music.LockScreenAty">

    <ImageView
        android:id="@+id/lock_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/move_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:20"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/lock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7月26日 周四"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/lock_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/lock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="travel"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lock_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <me.wcy.lrcview.LrcView
            android:id="@+id/lrc_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:lrcPadding="5dp"
            app:lrcCurrentTextColor="@color/colorPrimary"
            app:lrcNormalTextColor="#d2f6f6f6"
            android:layout_marginTop="280dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/music_play_former"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_music_play_former_lock"
            android:layout_marginEnd="240dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lrc_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/music_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_music_play_large"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lrc_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/music_play_latter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_music_play_latter_lock"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lrc_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/music_play_speed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_half_circle_btn_white"
            android:text="慢速"
            android:textColor="@android:color/white"
            android:layout_marginStart="240dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/lrc_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/lock_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/animated_vector_arrow_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
