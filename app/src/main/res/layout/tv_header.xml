<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:paddingBottom="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="语境精选"
        android:textColor="@color/colorTextWord"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_first"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_second">
        <com.example.carson.yjenglish.customviews.RoundRectImageView
            android:id="@+id/header_first"
            android:layout_width="160dp"
            android:layout_height="100dp"
            app:radius="20"
            android:src="@color/colorPrimary"
            />
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/word_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="color"
        android:textColor="@color/colorTextWord"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/card_first"
        app:layout_constraintTop_toBottomOf="@id/card_first"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_second"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_first"
        app:layout_constraintEnd_toEndOf="parent">
        <com.example.carson.yjenglish.customviews.RoundRectImageView
            android:id="@+id/header_second"
            android:layout_width="160dp"
            android:layout_height="100dp"
            app:radius="20"
            android:src="@color/colorAccent"
            />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/word_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beautiful"
        android:textColor="@color/colorTextWord"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/card_second"
        app:layout_constraintTop_toBottomOf="@id/card_second"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_white_solid"
        app:layout_constraintBottom_toBottomOf="@id/card_first"
        app:layout_constraintStart_toStartOf="@id/card_first"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_white_solid"
        app:layout_constraintBottom_toBottomOf="@id/card_second"
        app:layout_constraintStart_toStartOf="@id/card_second"
        />

    <TextView
        android:id="@+id/first_view_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="12.3w"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@id/card_first"
        app:layout_constraintBottom_toBottomOf="@id/card_first"
        />

    <TextView
        android:id="@+id/second_view_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="14.6w"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@id/card_second"
        app:layout_constraintBottom_toBottomOf="@id/card_second"
        />
</android.support.constraint.ConstraintLayout>