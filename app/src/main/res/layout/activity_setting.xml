<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carson.yjenglish.zone.view.setting.SettingAty">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textColor="@color/colorTextWord"
        android:textSize="16sp"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8ffff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/back">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/download_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="下载管理"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:drawableEnd="@drawable/ic_arrow_right_20dp"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/notify_remember_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="提醒背单词"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:drawableEnd="@drawable/ic_arrow_right_20dp"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/download_control"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_remember_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/remember_setting">

                <TextView
                    android:id="@+id/notify_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="正确错误提示音"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextWord"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    />

                <Switch
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:layout_marginEnd="10dp"
                    android:checked="true"
                    app:layout_constraintTop_toTopOf="@id/notify_sound"
                    app:layout_constraintBottom_toBottomOf="@id/notify_sound"
                    app:layout_constraintEnd_toEndOf="@id/notify_sound"
                    />

                <TextView
                    android:id="@+id/notify_lock_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="单词锁屏"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextWord"
                    android:paddingEnd="5dp"
                    android:visibility="gone"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/notify_sound"
                    />

                <Switch
                    android:id="@+id/switch_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/notify_lock_screen"
                    app:layout_constraintBottom_toBottomOf="@id/notify_lock_screen"
                    app:layout_constraintEnd_toEndOf="@id/notify_lock_screen"
                    />

                <TextView
                    android:id="@+id/notify_auto_play_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="非WIFI情况下自动播放"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextWord"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/notify_sound"
                    />

                <Switch
                    android:id="@+id/switch_auto_play_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/notify_auto_play_wifi"
                    app:layout_constraintBottom_toBottomOf="@id/notify_auto_play_wifi"
                    app:layout_constraintEnd_toEndOf="@id/notify_auto_play_wifi"
                    />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/remember_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="背单词设置"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/notify_remember_word"
                />

            <ImageView
                android:id="@+id/iv_remember_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up_gray_20dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/remember_setting"
                app:layout_constraintBottom_toBottomOf="@id/remember_setting"
                app:layout_constraintEnd_toEndOf="@id/remember_setting"
                />

            <TextView
                android:id="@+id/private_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="隐私设置"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/layout_remember_setting"
                />

            <ImageView
                android:id="@+id/iv_private_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up_gray_20dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/private_setting"
                app:layout_constraintBottom_toBottomOf="@id/private_setting"
                app:layout_constraintEnd_toEndOf="@id/private_setting"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_private_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/private_setting">

                <TextView
                    android:id="@+id/notify_to_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="是否公开动态"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextWord"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    />

                <Switch
                    android:id="@+id/switch_to_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:layout_marginEnd="10dp"
                    android:checked="true"
                    app:layout_constraintTop_toTopOf="@id/notify_to_public"
                    app:layout_constraintBottom_toBottomOf="@id/notify_to_public"
                    app:layout_constraintEnd_toEndOf="@id/notify_to_public"
                    />

                <TextView
                    android:id="@+id/notify_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="消息免打扰"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextWord"
                    android:paddingEnd="5dp"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="1dp"
                    app:layout_constraintTop_toBottomOf="@id/notify_to_public"
                    />

                <Switch
                    android:id="@+id/switch_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@id/notify_notification"
                    app:layout_constraintBottom_toBottomOf="@id/notify_notification"
                    app:layout_constraintEnd_toEndOf="@id/notify_notification"
                    />

            </android.support.constraint.ConstraintLayout>



            <TextView
                android:id="@+id/account_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="账号管理"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/layout_private_setting"
                />

            <!--这里将插入三个ImageView-->

            <ImageView
                android:id="@+id/phone_bind"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_bind_phone"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/wechat_bind"
                app:layout_constraintTop_toTopOf="@id/account_manage"
                app:layout_constraintBottom_toBottomOf="@id/account_manage"
                />

            <ImageView
                android:id="@+id/wechat_bind"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_bind_wechat"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/qq_bind"
                app:layout_constraintTop_toTopOf="@id/account_manage"
                app:layout_constraintBottom_toBottomOf="@id/account_manage"
                />

            <ImageView
                android:id="@+id/qq_bind"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_bind_qq"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/account_manage"
                app:layout_constraintBottom_toBottomOf="@id/account_manage"
                app:layout_constraintEnd_toEndOf="@id/account_manage"
                />

            <TextView
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="意见反馈"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:drawableEnd="@drawable/ic_arrow_right_20dp"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/account_manage"
                />
            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="关于我们"
                android:textSize="15sp"
                android:textColor="@color/colorTextWord"
                android:drawableEnd="@drawable/ic_arrow_right_20dp"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@id/advice"
                />

            <TextView
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="退出账号"
                android:textColor="@color/colorRed"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/about"
                android:layout_marginBottom="30dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/exit"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/add_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
