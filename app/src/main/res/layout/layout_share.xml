<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/out_border"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_rect_btn_alpha_gray"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/share_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="背单词 上背呗"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/out_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/share_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:text="真实语境背单词 轻松通过四六级"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/share_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/divider_middle"
        android:layout_width="0.5dp"
        android:layout_height="35dp"
        android:background="#fff"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/share_slogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背单词天数"
        android:textColor="#fff"
        android:textSize="8sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/share_slogan"
        app:layout_constraintStart_toStartOf="@id/out_border"
        app:layout_constraintEnd_toEndOf="@id/divider_middle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已背单词数"
        android:textColor="#fff"
        android:textSize="8sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/share_slogan"
        app:layout_constraintStart_toStartOf="@id/divider_middle"
        app:layout_constraintEnd_toEndOf="@id/out_border"
        />
    
    <TextView
        android:id="@+id/sign_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12365"
        android:textColor="#fff"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/share_slogan"
        app:layout_constraintStart_toStartOf="@id/out_border"
        app:layout_constraintEnd_toEndOf="@id/divider_middle"
        />
    
    <TextView
        android:id="@+id/sign_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1236"
        android:textSize="21sp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/share_slogan"
        app:layout_constraintStart_toStartOf="@id/divider_middle"
        app:layout_constraintEnd_toEndOf="@id/out_border"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher_logo_round"
            android:layout_marginStart="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背呗背单词"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:textColor="@android:color/white"
                android:text="更懂你的背单词软件"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/er_code"
            android:layout_marginStart="8dp"
            />
        
    </LinearLayout>

</android.support.constraint.ConstraintLayout>