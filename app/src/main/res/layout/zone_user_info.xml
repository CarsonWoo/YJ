<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/zone_user_info"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="我的资料"
        android:textColor="@color/colorTextWord"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        />
    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:visibility="invisible"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="头像"
        android:textSize="16sp"
        android:textColor="@color/colorTextWord"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow_right_20dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_portrait"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@id/tv_portrait"
        app:layout_constraintTop_toTopOf="@id/tv_portrait"
        app:layout_constraintBottom_toBottomOf="@id/tv_portrait"
        />
    
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="昵称"
        android:textSize="16sp"
        android:textColor="@color/colorTextWord"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_portrait"
        />

    <ImageView
        android:id="@+id/iv_username"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_edit"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/tv_username"
        app:layout_constraintTop_toTopOf="@id/tv_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_username"
        />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:enabled="false"
        android:textSize="15sp"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:textColor="@color/colorText"
        android:maxLength="11"
        android:minWidth="80dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@id/tv_username"
        app:layout_constraintTop_toTopOf="@id/tv_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_username"
        />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="性别"
        android:textSize="16sp"
        android:textColor="@color/colorTextWord"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        />

    <ImageView
        android:id="@+id/iv_gender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_edit"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/tv_gender"
        app:layout_constraintTop_toTopOf="@id/tv_gender"
        app:layout_constraintBottom_toBottomOf="@id/tv_gender"
        />

    <TextView
        android:id="@+id/edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        android:maxLength="1"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/tv_gender"
        app:layout_constraintEnd_toEndOf="@id/tv_gender"
        app:layout_constraintBottom_toBottomOf="@id/tv_gender"/>

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="个性签名"
        android:textSize="16sp"
        android:textColor="@color/colorTextWord"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"
        />

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_edit"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/tv_sign"
        app:layout_constraintTop_toTopOf="@id/tv_sign"
        app:layout_constraintBottom_toBottomOf="@id/tv_sign"
        />
    
    <EditText
        android:id="@+id/edit_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:enabled="false"
        android:textSize="15sp"
        android:background="@android:color/white"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:paddingStart="10dp"
        android:text="Hello World"
        android:textColor="@color/colorTextWord"
        app:layout_constraintTop_toBottomOf="@id/tv_sign"
        />

    <FrameLayout
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>